<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Price</th>
      <th>Neighbourhood</th>
      <th>Postal code</th>
      <th>Description</th>
      <th>Phone number</th>
      <th>User</th>
      <th>Category</th>
      <th>City</th>
      <th>Pictures</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.price %></td>
        <td><%= post.neighbourhood %></td>
        <td><%= post.postal_code %></td>
        <td><%= post.description %></td>
        <td><%= post.phone_number %></td>
        <td><%= post.user_id %></td>
        <td><%= post.category_id %></td>
        <td><%= post.city_id %></td>
        <td><%= post.pictures %></td>
        <td><%= post.active %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
